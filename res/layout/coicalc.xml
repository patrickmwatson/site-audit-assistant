<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1200px"
    android:layout_height="wrap_content"
    android:id="@+id/coicalclayout" 
    android:orientation="vertical"
    android:padding="50dp"
    android:gravity="center">
    
     <TableRow >
	    <TextView
	        	android:text="Select Unit"
				android:layout_width="0px"
		   		android:layout_height="wrap_content"
		   		android:textSize="50dp"
		   		android:layout_weight="1"/>
	    
	    <Spinner
				android:id="@+id/suspinner"
				android:layout_width="0px"
		   		android:layout_height="wrap_content"
		   		android:textSize="50dp"
		   		android:layout_weight="1"/>
	        
    </TableRow>
    <TableRow >
	    <TextView
	        	android:text="Cost of unit to be installed."
				android:layout_width="0px"
		   		android:layout_height="wrap_content"
		   		android:textSize="50dp"
		   		android:layout_weight="2"/>
	    <EditText
				android:id="@+id/coutbiet"
				android:inputType="numberDecimal"
				android:layout_width="0px"
		   		android:layout_height="wrap_content"
		   		android:textSize="50dp"
		   		android:layout_weight="1"/>
	    <Spinner
				android:id="@+id/coutbiunit"
				android:layout_width="0px"
		   		android:layout_height="wrap_content"
		   		android:textSize="50dp"
		   		android:layout_weight="1"/>
	        
    </TableRow>
    
    <TableRow >
	    <TextView
	        	android:text="What is the area covered by 1 unit?"
				android:layout_width="0px"
		   		android:layout_height="wrap_content"
		   		android:textSize="50dp"
		   		android:layout_weight="2"/>
	    <EditText
				android:id="@+id/acb1uet"
				android:inputType="numberDecimal"
				android:layout_width="0px"
		   		android:layout_height="wrap_content"
		   		android:textSize="50dp"
		   		android:layout_weight="1"/>
	     <Spinner
				android:id="@+id/acb1uunit"
				android:layout_width="0px"
		   		android:layout_height="wrap_content"
		   		android:textSize="50dp"
		   		android:layout_weight="1"/>
    </TableRow>
    
    <TableRow >
	    <TextView
	        	android:text="Location of unit installation."
				android:layout_width="0px"
		   		android:layout_height="wrap_content"
		   		android:textSize="50dp"
		   		android:layout_weight="2"/>
	    <Spinner
				android:id="@+id/louisp"
				android:layout_width="0px"
		   		android:layout_height="wrap_content"
		   		android:textSize="50dp"
		   		android:layout_weight="1"/>
	    <TextView
	        	android:text="=0.0mÂ²"
				android:id="@+id/soltv"
				android:layout_width="0px"
		   		android:layout_height="wrap_content"
		   		android:textSize="50dp"
		   		android:layout_weight="1"/>
	</TableRow>
	 <TableRow>
	    <TextView
	        	
				android:layout_width="0px"
		   		android:layout_height="wrap_content"
		   		android:textSize="50dp"
		   		android:layout_weight="1"/>
	    
	    
	</TableRow>
	
	 <TableRow android:padding="25px">
	    <Button
	        	android:text="Calculate"
				android:id="@+id/calccoibutton"
				android:layout_width="0px"
		   		android:layout_height="wrap_content"
		   		android:textSize="50dp"
		   		android:layout_weight="1"/>
	    
	    <TextView
	        	android:textStyle="bold|italic"
	        	android:gravity="center"
				android:id="@+id/calccoitv"
				android:layout_width="0px"
		   		android:layout_height="wrap_content"
		   		android:textSize="50dp"
		   		android:layout_weight="1"/>
	</TableRow>
	 <TableRow>
	    <TextView
	        	
				android:layout_width="0px"
		   		android:layout_height="wrap_content"
		   		android:textSize="50dp"
		   		android:layout_weight="1"/>
	    
	    
	</TableRow>
	 <TableRow>
	     <Button
	        	android:text="Cancel"
				android:id="@+id/coicalccancel"
				android:layout_width="0px"
		   		android:layout_height="wrap_content"
		   		android:textSize="50dp"
		   		android:layout_weight="1"/>
	      <TextView
	        	
				android:layout_width="0px"
		   		android:layout_height="wrap_content"
		   		android:textSize="50dp"
		   		android:layout_weight="1"/>
	    <Button
	        	android:text="OK"
				android:id="@+id/coicalcok"
				android:layout_width="0px"
		   		android:layout_height="wrap_content"
		   		android:textSize="50dp"
		   		android:layout_weight="1"/>
	    
	   
	    
	</TableRow>
	
</TableLayout>